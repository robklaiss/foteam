<?php
require_once 'includes/config.php';
require_once 'includes/functions.php';

// Redirect to login if not logged in
if (!is_logged_in()) {
    $_SESSION['redirect_after_login'] = 'checkout.php';
    set_flash_message('Debe iniciar sesión para realizar el pago', 'warning');
    redirect('login.php');
}

// Get cart items
$cart_items = get_cart_items($_SESSION['user_id']);

// Redirect to cart if empty
if (empty($cart_items)) {
    set_flash_message('Su carrito está vacío', 'warning');
    redirect('cart.php');
}

// Process checkout form
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // Check CSRF token
    check_csrf_token();
    
    $customer_name = $_POST['customer_name'] ?? '';
    $customer_email = $_POST['customer_email'] ?? '';
    $customer_phone = $_POST['customer_phone'] ?? '';
    
    // Validate input
    $errors = [];
    
    if (empty($customer_name)) {
        $errors[] = 'El nombre es obligatorio';
    }
    
    if (empty($customer_email)) {
        $errors[] = 'El correo electrónico es obligatorio';
    } elseif (!filter_var($customer_email, FILTER_VALIDATE_EMAIL)) {
        $errors[] = 'El correo electrónico no es válido';
    }
    
    if (empty($customer_phone)) {
        $errors[] = 'El teléfono es obligatorio';
    }
    
    if (empty($errors)) {
        $result = create_order(
            $_SESSION['user_id'],
            $customer_name,
            $customer_email,
            $customer_phone
        );
        
        if ($result['success']) {
            set_flash_message('¡Pedido realizado con éxito!', 'success');
            redirect('order_confirmation.php?id=' . $result['order_id']);
        } else {
            set_flash_message($result['message'], 'danger');
        }
    } else {
        // Display all errors
        foreach ($errors as $error) {
            set_flash_message($error, 'danger');
        }
    }
}

// Calculate total
$price_per_item = 10.00; // Example price
$total = count($cart_items) * $price_per_item;

// Include header
include 'includes/header.php';
?>

